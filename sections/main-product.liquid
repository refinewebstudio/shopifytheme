{%-
  liquid
  if section.settings.enable_breadcrumbs
    assign breadcrumbs_class = 'color-' | append: section.settings.style
    render 'breadcrumbs' with breadcrumbs_class as class
  endif
  render 'main-product', section: section, show_seo: true
-%}

{% schema %}
{
  "name": "t:sections.main-product.name",
  "settings": [
    {
      "type": "select",
      "id": "style",
      "label": "t:sections.global.settings.style.label",
      "options": [
        {
          "value": "style-1",
          "label": "t:sections.global.settings.style.options.option_1"
        },
        {
          "value": "style-2",
          "label": "t:sections.global.settings.style.options.option_2"
        },
        {
          "value": "style-3",
          "label": "t:sections.global.settings.style.options.option_3"
        }
      ],
      "default": "style-1"
    },
    {
      "type": "select",
      "id": "spacing_desktop",
      "label": "t:sections.global.settings.spacing.label",
      "options": [
        {
          "value": "mt-0--large mb-0--large",
          "label": "t:sections.global.settings.spacing.options.option_1"
        },
        {
          "value": "mt-xs--large mb-xs--large",
          "label": "t:sections.global.settings.spacing.options.option_2"
        },
        {
          "value": "mt-s--large mb-s--large",
          "label": "t:sections.global.settings.spacing.options.option_3"
        }
      ],
      "default": "mt-s--large mb-s--large"
    },
    {
      "type": "select",
      "id": "spacing_mobile",
      "label": "t:sections.global.settings.spacing.label_mobile",
      "options": [
        {
          "value": "mt-0 mb-0",
          "label": "t:sections.global.settings.spacing.options.option_1"
        },
        {
          "value": "mt-xs mb-xs",
          "label": "t:sections.global.settings.spacing.options.option_2"
        },
        {
          "value": "mt-s mb-s",
          "label": "t:sections.global.settings.spacing.options.option_3"
        }
      ],
      "default": "mt-s mb-s"
    },
    {
      "type": "checkbox",
      "id": "adaptive_slider_height",
      "label": "t:sections.main-product.settings.adaptive_slider_height.label",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "enable_breadcrumbs",
      "label": "t:sections.main-product.settings.enable_breadcrumbs.label",
      "default": true
    },
    {
      "type": "select",
      "id": "gallery_type",
      "label": "t:sections.main-product.settings.gallery_type.label",
      "options": [
        {
          "value": "grid",
          "label": "t:sections.main-product.settings.gallery_type.options.option_1"
        },
        {
          "value": "thumbs-left",
          "label": "t:sections.main-product.settings.gallery_type.options.option_2"
        },
        {
          "value": "thumbs-right",
          "label": "t:sections.main-product.settings.gallery_type.options.option_3"
        },
        {
          "value": "thumbs-bottom",
          "label": "t:sections.main-product.settings.gallery_type.options.option_4"
        }
      ],
      "default": "grid"
    }
  ],
  "blocks": [
    {
      "type": "badges",
      "name": "t:sections.main-product.blocks.badges.name",
      "limit": 1
    },
    {
      "type": "title",
      "name": "t:sections.main-product.blocks.title.name",
      "limit": 1
    },
    {
      "type": "type",
      "name": "t:sections.main-product.blocks.type.name",
      "limit": 1
    },
    {
      "type": "price",
      "name": "t:sections.main-product.blocks.price.name",
      "limit": 1
    },
    {
      "type": "text",
      "name": "t:sections.main-product.blocks.text.name",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "t:sections.main-product.blocks.text.settings.title.label",
          "default": "Additional text"
        }
      ]
    },
    {
      "type": "variant-selector",
      "name": "t:sections.main-product.blocks.variant-selector.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "t:sections.main-product.blocks.variant-selector.settings.title.label",
          "default": "Variant selector",
          "info": "t:sections.main-product.blocks.variant-selector.settings.title.info"
        },
        {
          "type": "page",
          "id": "size_guide_page",
          "label": "t:sections.main-product.blocks.variant-selector.settings.size_guide_page.label",
          "info": "t:sections.main-product.blocks.variant-selector.settings.size_guide_page.info"
        }
      ]
    },
    {
      "type": "custom_liquid",
      "name": "t:sections.main-product.blocks.custom_liquid.name",
      "settings": [
        {
          "type": "liquid",
          "id": "custom_liquid",
          "label": "t:sections.main-product.blocks.custom_liquid.settings.custom_liquid.label",
          "info": "t:sections.main-product.blocks.custom_liquid.settings.custom_liquid.info"
        }
      ]
    },
    {
      "type": "quantity-input",
      "name": "t:sections.main-product.blocks.quantity-input.name",
      "limit": 1
    },
    {
      "type": "stock-notification",
      "name": "t:sections.main-product.blocks.stock-notification.name",
      "limit": 1,
      "settings": [
        {
          "type": "range",
          "id": "threshold",
          "min": 1,
          "max": 50,
          "step": 1,
          "label": "t:sections.main-product.blocks.stock-notification.settings.threshold.label",
          "info": "t:sections.main-product.blocks.stock-notification.settings.threshold.info",
          "default": 15
        }
      ]
    },
    {
      "type": "pickup-availability",
      "name": "t:sections.main-product.blocks.pickup-availability.name",
      "limit": 1
    },
    {
      "type": "purchase-options",
      "name": "t:sections.main-product.blocks.purchase-options.name",
      "limit": 1,
      "settings": [
        {
          "type": "paragraph",
          "content": "t:sections.main-product.blocks.purchase-options.settings.paragraph_info.content"
        },
        {
          "type": "text",
          "id": "title",
          "label": "t:sections.main-product.blocks.purchase-options.settings.title.label",
          "default": "Purchase Options"
        }
      ]
    },
    {
      "type": "buy-buttons",
      "name": "t:sections.main-product.blocks.buy-buttons.name",
      "limit": 1,
      "settings": [
        {
          "type": "checkbox",
          "id": "show_dynamic_checkout",
          "label": "t:sections.main-product.blocks.buy-buttons.settings.show_dynamic_checkout.label",
          "info": "t:sections.main-product.blocks.buy-buttons.settings.show_dynamic_checkout.info",
          "default": true
        }
      ]
    },
    {
      "type": "product-content",
      "name": "t:sections.main-product.blocks.product-content.name",
      "limit": 1
    },
    {
      "type": "collapsible-tabs",
      "name": "t:sections.main-product.blocks.collapsible-tabs.name",
      "limit": 1,
      "settings": [
        {
          "type": "header",
          "content": "t:sections.main-product.blocks.collapsible-tabs.settings.header_tab_1.content"
        },
        {
          "type": "text",
          "id": "tab_title_1",
          "label": "t:sections.main-product.blocks.collapsible-tabs.settings.title.label",
          "default": "Tab title"
        },
        {
          "type": "richtext",
          "id": "tab_content_1",
          "label": "t:sections.main-product.blocks.collapsible-tabs.settings.content.label",
          "default": "<p>Descriptive tab content</p>"
        },
        {
          "type": "page",
          "id": "tab_page_1",
          "label": "t:sections.main-product.blocks.collapsible-tabs.settings.page.label",
          "info": "t:sections.main-product.blocks.collapsible-tabs.settings.page.info"
        },
        {
          "type": "header",
          "content": "t:sections.main-product.blocks.collapsible-tabs.settings.header_tab_2.content"
        },
        {
          "type": "text",
          "id": "tab_title_2",
          "label": "t:sections.main-product.blocks.collapsible-tabs.settings.title.label",
          "default": "Tab title"
        },
        {
          "type": "richtext",
          "id": "tab_content_2",
          "label": "t:sections.main-product.blocks.collapsible-tabs.settings.content.label",
          "default": "<p>Descriptive tab content</p>"
        },
        {
          "type": "page",
          "id": "tab_page_2",
          "label": "t:sections.main-product.blocks.collapsible-tabs.settings.page.label",
          "info": "t:sections.main-product.blocks.collapsible-tabs.settings.page.info"
        },
        {
          "type": "header",
          "content": "t:sections.main-product.blocks.collapsible-tabs.settings.header_tab_3.content"
        },
        {
          "type": "text",
          "id": "tab_title_3",
          "label": "t:sections.main-product.blocks.collapsible-tabs.settings.title.label",
          "default": "Tab title"
        },
        {
          "type": "richtext",
          "id": "tab_content_3",
          "label": "t:sections.main-product.blocks.collapsible-tabs.settings.content.label",
          "default": "<p>Descriptive tab content</p>"
        },
        {
          "type": "page",
          "id": "tab_page_3",
          "label": "t:sections.main-product.blocks.collapsible-tabs.settings.page.label",
          "info": "t:sections.main-product.blocks.collapsible-tabs.settings.page.info"
        }
      ]
    },
    {
      "type": "upsell-products",
      "name": "t:sections.main-product.blocks.upsell-products.name",
      "limit": 1,
      "settings": [
        {
          "type": "header",
          "content": "t:sections.main-product.blocks.upsell-products.header.content",
          "info": "t:sections.main-product.blocks.upsell-products.header.info"
        },
        {
          "type": "text",
          "id": "title",
          "label": "t:sections.main-product.blocks.upsell-products.settings.title.label"
        }
      ]
    },
    {
      "type": "sticky-bar",
      "name": "t:sections.main-product.blocks.sticky-bar.name",
      "limit": 1,
      "settings": [
        {
          "type": "checkbox",
          "id": "show_quantity",
          "label": "t:sections.main-product.blocks.sticky-bar.settings.show_quantity.label",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "hide_options_mobile",
          "label": "t:sections.main-product.blocks.sticky-bar.settings.hide_options_mobile.label",
          "default": false
        }
      ]
    },
    {
      "type": "@app"
    }
  ]
}
{% endschema %}
