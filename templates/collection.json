{
  "sections": {
    "banner": {
      "type": "main-collection-banner",
      "settings": {
        "style": "style-1",
        "height": "custom",
        "image": "{{ collection.image }}",
        "image_crop": "top",
        "background_overlay": "#000000",
        "background_overlay_opacity": 14,
        "subheading": "Catalog",
        "heading": "<p>{{ collection.title }}<\/p>",
        "align_vertical": "center",
        "align_horizontal": "center",
        "show_background": false
      }
    },
    "main": {
      "type": "main-collection",
      "settings": {
        "style": "style-1",
        "enable_breadcrumbs": true,
        "enable_filters": true,
        "filters_layout": "horizontal",
        "enable_sorting": true,
        "grid_fullwidth": true,
        "grid_side_margins": true,
        "grid_side_margins_mobile": true,
        "products_per_row_mobile": "1",
        "products_per_row_desktop": "2",
        "products_per_page": 6
      }
    }
  },
  "order": [
    "banner",
    "main"
  ]
}
